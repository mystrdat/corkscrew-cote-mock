/*
  Layout
  ============================== */

body
  display: flex
  flex-direction: column
  justify-content: flex-start
  align-items: flex-start

  > *
    width: 100%

header
  color: #fff

  .controls
    position: relative
    height: $headerHeight
    justify-content: space-between
    font-size: $fontS
    font-weight: $fontSemiBold
    background-color: $colorBurgundy

    span
      line-height: 20px
      padding: $base 0

    .back
      position: absolute
      left: 0
      bottom: 0
      padding-left: 25px
      background: url(../img/back.png) no-repeat $base center / auto 12px
      opacity: 1
      transition: opacity 300ms ease-in
      will-change: opacity

      &.hidden
        opacity: 0

    .title
      position: absolute
      left: 50%
      bottom: 0
      transform: translateX(-50%)
    
    .history
      position: absolute
      right: 0
      bottom: 0
      text-indent: -9999px
      white-space: nowrap
      overflow hidden
      line-height: 40px
      width: 40px
      padding: 0
      background: url(../img/history.png) no-repeat center / auto 20px
  
  .location
    display: flex
    justify-content: center
    align-items: center
    height: 0
    overflow: hidden
    background-color: $colorBurgundy
    transition: height 300ms ease-in-out

    &.visible
      height: $locationHeight

      span
        opacity: 0.7

    span
      color: #999
      font-size: $fontXS
      text-transform: uppercase
      padding-left: 12px
      background: url(../img/distance.png) no-repeat left center / auto 10px
      opacity: 0
      transition: opacity 300ms ease-in-out
      transition-delay: 50ms
  
  .search
    height: $searchHeight
    line-height: $searchHeight
    padding-left: 30px
    font-size: $fontS
    color: $colorGrey
    border-bottom: 5px solid $colorGreyAlt
    background: url(../img/search.png) no-repeat $base center / auto 12px

main
  flex: 1 0
  position: relative
  overflow: hidden

.view
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  overflow: auto
  will-change: scroll-position
  -webkit-overflow-scrolling: touch
  background-color: #fff
  opacity: 0

  &.in, &.out
    z-index: 1
    animation-duration: 400ms
    animation-fill-mode: forwards

  &.in
    animation-name: viewIn
    animation-timing-function: ease-out

    &.back
      animation-name: viewInBack
  
  &.out
    animation-name: viewOut
    animation-timing-function: ease-in

    &.back
      animation-name: viewOutBack
  
  &.view-restaurants
    &.in
      animation-name: viewRestaurantsIn
  
  &.view-meatfish
    &.in
      animation-name: viewDishesIn
    &.out
      animation-name: viewDishesOut

footer
  position: fixed
  left: 0
  bottom: 0
  width: 100%
  padding: $base
  background-color: #fff
  box-shadow: $boxShadow
  z-index: 100
  opacity: 0
  transform: translateY(100%)
  transition: all 300ms ease-in-out
  transition-delay: 300ms

  &.visible
    opacity: 1
    transform: translateY(0)

  .selected
    display: block
    padding: $base 15px $base 40px
    background-image: url(../img/counter.png), url(../img/up-chevron.svg)
    background-repeat: no-repeat
    background-position: left center, right 10px center
    background-size: auto 16px, auto 12px

  .giefwine
    display: block
    font-size: $fontXS
    font-weight: $fontSemiBold
    text-transform: uppercase
    color: #fff
    padding: $base 15px
    border-radius: 5px
    background: $colorBurgundyAlt url(../img/giefwine.png) no-repeat right 15px center / auto 12px
